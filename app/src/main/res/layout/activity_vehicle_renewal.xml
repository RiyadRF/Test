<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.VehicleRenewalActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ترخيص المركبة"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:background="#1600A5FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vehicle_renewal_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تم دفع المخالفات "
                android:textSize="@dimen/_14ssp"
                android:textColor="#FF32A800"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مرخصة لغاية: "
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_6sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vehicle_renewal_infraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تم دفع المخالفات "
                android:textSize="@dimen/_14ssp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المخالفات: "
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_6sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vehicle_renewal_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تم دفع المخالفات "
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفحص الفني: "
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_6sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vehicle_renewal_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تم دفع المخالفات "
                android:textSize="@dimen/_14ssp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التأمين: "
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_6sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vehicle_renewal_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300 دينار"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قيمة ترخيص المركبة: "
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_6sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vehicle_renewal_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ترخيص لا زال فعال"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ملاحظات: "
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_6sdp"/>

        <Button
            android:id="@+id/btn_vehicle_renewal_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="متابعة"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>